    <a href="/Ciudad"><i>CIUDAD</i></a>
    &nbsp;<i class="bi-chevron-right"></i>&nbsp;
    <label style="font-weight:bold">EDITAR CIUDAD</label>
    <hr />
</h7>

<table class="table table-borderless">
    <tr>
        <td>
            <label><strong>Departamento</strong></label>
            <select class="form-control" id="SelectEDepartamento"></select>
        </td>
    </tr>
    <tr>
        <td>
            <label><strong>Nombre Ciudad</strong></label>
            <input class="form-control" type="text" id="InputENombreCiudad" autocomplete="off" />
        </td>
    </tr>
    <tr>
        <td>
            <label><strong>Estado</strong></label>
            <select class="form-control" id="SelectEstadoCiudad">
                <option value="0">Inactivo</option>
                <option value="1">Activo</option>
            </select>
        </td>
    <tr>
        <td>
            <button class="btn btn-success btn-sm" onclick="GuardarCambiosCiudad()">Guardar Cambios</button>
        </td>
    </tr>
</table>

<script>
    $(document).ready(function () {
        CargarDatosCiudad();
    });
</script>

