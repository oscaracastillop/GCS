@{
    ViewBag.Title = "Departamento";
}
<div>
    <a href="/Home"><i>INICIO</i></a>
    &nbsp;<i class="bi-chevron-right"></i>&nbsp;
    <a href="/Modulo/Configuracion"><i>MODULO CONFIGURACIÓN</i></a>
    &nbsp;<i class="bi-chevron-right"></i>&nbsp;
    <label style="font-weight:bold">DEPARTAMENTO</label>
    <hr />
</div>



<table class="table table-borderless">
    <tr style="min-width:100%">
        <td width="50%"><label><strong>LISTADO DE DEPARTAMENTOS</strong></label></td>
        <td width="50%"><a href="/Departamento/Crear_Departamento" class="btn btn-success btn-sm" title="Agregar un nuevo Registro" style="float:right">Crear Departamento</a></td>
    </tr>
</table>

<table id="gridDepartamento" class="table display" style="width:100%"></table>

@*Modal Eliminar*@
<div class="modal fade" id="ModalEliminarDepartamento" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel"><strong>Eliminar Departamento</strong></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <label id="IdDepartamento" hidden></label>
                <label id="MensajeEliminarDepartamento"></label>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-sm" onclick="EliminarDepartamento()"><i class="bi-trash"></i> Eliminar</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        GridDepartamento();
    });
</script>
