@{
    ViewBag.Title = "Editar Departamento";
}

<h7>
    <a href="/Home"><i>INICIO</i></a>
    &nbsp;<i class="bi-chevron-right"></i>&nbsp;
    <a href="/Modulo/Configuracion"><i>MODULO CONFIGURACIÓN</i></a>
    &nbsp;<i class="bi-chevron-right"></i>&nbsp;
    <a href="/Departamento"><i>DEPARTAMENTO</i></a>
    &nbsp;<i class="bi-chevron-right"></i>&nbsp;
    <label style="font-weight:bold">EDITAR DEPARTAMENTO</label>
    <hr />
</h7>

<table class="table table-borderless">
    <tr>
        <td>
            <label><strong>País</strong></label>
            <select class="form-control" id="SelectEPais"></select>
        </td>
    </tr>
    <tr>
        <td>
            <label><strong>Nombre Departamento</strong></label>
            <input class="form-control" type="text" id="InputENombreDepartamento" autocomplete="off" />
        </td>
    </tr>
    <tr>
        <td>
            <label><strong>Estado</strong></label>
            <select class="form-control" id="SelectEstadoDepartamento">
                <option value="0">Inactivo</option>
                <option value="1">Activo</option>
            </select>
        </td>
    <tr>
        <td>
            <button class="btn btn-success btn-sm" onclick="GuardarCambiosDepartamento()">Guardar Cambios</button>
        </td>
    </tr>
</table>

<script>
    $(document).ready(function () {
        CargarDatosDepartamento();
    });
</script>

