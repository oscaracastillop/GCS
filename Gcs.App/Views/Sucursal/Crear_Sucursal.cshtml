@{
    ViewBag.Title = "Crear Sucursal";
}

<h7>
    <a href="/Home"><i>INICIO</i></a>
    &nbsp;<i class="bi-chevron-right"></i>&nbsp;
    <a href="/Modulo/Empresa"><i>MODULO EMPRESA</i></a>
    &nbsp;<i class="bi-chevron-right"></i>&nbsp;
    <a href="/Sucursal"><i>SUCURSAL</i></a>
    &nbsp;<i class="bi-chevron-right"></i>&nbsp;
    <label style="font-weight:bold">CREAR SUCURSAL</label>
    <hr />
</h7>

<table class="table table-borderless">
    <tr>
        <td>
            <label><strong>Empresa</strong></label>
            <select class="form-control" id="SelectEmpresa"></select>
        </td>
        <td>
            <label><strong>Nombre Sucursal</strong></label>
            <input class="form-control" type="text" id="InputNombreSucursal" name="name" autocomplete="off" />
        </td>
        <td>
            <label><strong>Tipo Documento</strong></label>
            <select class="form-control" id="SelectTipoDocumento"></select>
        </td>
    </tr>
    <tr>
        <td>
            <label><strong>Identificación Sucursal</strong></label>
            <input class="form-control" type="text" id="InputIdentificacionSucursal" name="name" autocomplete="off" />
        </td>
        <td>
            <label><strong>Email</strong></label>
            <input class="form-control" type="text" id="InputEmailSucursal" name="name" autocomplete="off" />
        </td>
        <td>
            <label><strong>Teléfono</strong></label>
            <input class="form-control" type="text" id="InputTelefonoSucursal" name="name" autocomplete="off" />
        </td>
    </tr>
    <tr>
        <td>
            <label><strong>Nombre Contacto</strong></label>
            <input class="form-control" type="text" id="InputContactoSucursal" name="name" autocomplete="off" />
        </td>
        <td>
            <label><strong>País</strong></label>
            <select class="form-control" id="SelectPais" onchange="BuscarDeptoIdPais('N',$('#SelectPais').val())"></select>
        </td>
        <td>
            <label><strong>Departamento</strong></label>
            <select class="form-control" id="SelectDepartamento" onchange="BuscarCiudadIdDepartamento('N',$('#SelectDepartamento').val())"></select>
        </td>
    </tr>
    <tr>
        <td>
            <label><strong>Ciudad</strong></label>
            <select class="form-control" id="SelectCiudad"></select>
        </td>
        <td>
            <label><strong>Dirección</strong></label>
            <input class="form-control" type="text" id="InputDireccionSucursal" name="name" autocomplete="off" />
        </td>
    </tr>
    <tr>
        <td>
            <button class="btn btn-success btn-sm" onclick="CrearSucursal()"><i class="bi-upload"></i> Guardar</button>
        </td>
    </tr>
</table>

<script>
    $(document).ready(function () {
        ListaTipoDocumento('N');
        ListaPais('N');
        ListaEmpresa('N');
    });
</script>

